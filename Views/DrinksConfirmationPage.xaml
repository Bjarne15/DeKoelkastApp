<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeKoelkastApp.Views.DrinksConfirmationPage"
             Title="DrinksConfirmationPage">
    <VerticalStackLayout>
        <Label Text="[gekozen drankje] werd uit de koelkast gehaald en op jouw rekening gezet."
               VerticalOptions="Center"
               HorizontalOptions="Center" />
        <Button Text="OK"
                Command="{Binding OkCommand}"
                WidthRequest="250"
                BackgroundColor="{StaticResource BackgroundButtons}"
                TextColor="{StaticResource TextcolorLight}" />
        <Button Text="Annuleren"
                Command="{Binding CancelCommand}"
                WidthRequest="250"
                BackgroundColor="{StaticResource BackgroundButtons}"
                TextColor="{StaticResource TextcolorLight}" />
    </VerticalStackLayout> <!-- Opmaak voor drank pakken validatie. -->
</ContentPage>