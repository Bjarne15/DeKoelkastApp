<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeKoelkastApp.Views.FridgeInventoryPage"
             xmlns:vm="clr-namespace:DeKoelkastApp.ViewModels"
             Title="FridgeInventoryPage">


    <!-- Koppel het ViewModel aan de View -->
    <ContentPage.BindingContext>
        <vm:FridgeInventoryViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <!-- Gebonden aan de WelcomeText-property in het ViewModel -->
        <Label Text="{Binding WelcomeText}"
               VerticalOptions="Center"
               HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>