<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeKoelkastApp.Views.FridgeSelectionPage"
             Title="FridgeSelectionPage">
    
    
    <VerticalStackLayout Spacing="20" Padding="10">
        <Label Text="Kies een koelkast of beheer je account."
               HorizontalOptions="Center"
               VerticalOptions="Center" />

        <Button Text="Zuyd Heeren"
                BackgroundColor="{StaticResource BackgroundButtons}"
                TextColor="{StaticResource TextcolorLight}"
                WidthRequest="250"
                Command="{Binding NavigateToFridgeCommand}" />

        <Button Text="Instellingen"
                BackgroundColor="{StaticResource BackgroundButtons}"
                TextColor="{StaticResource TextcolorLight}"
                WidthRequest="250"
                Command="{Binding NavigateToSettingsCommand}" />

        <Button Text="Uitloggen"
                BackgroundColor="{StaticResource BackgroundButtons}"
                TextColor="{StaticResource TextcolorLight}"
                WidthRequest="250"
                Command="{Binding NavigateToLogoutCommand}" />
    </VerticalStackLayout>
</ContentPage> <!-- Opmaak voor pagina om koelkast te kiezen. -->